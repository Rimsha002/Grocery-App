<%# Profile Edit Page %>
<div class="bg-white">
  <div class="mx-auto max-w-7xl px-4 py-16 sm:px-6 lg:px-8">
    <div class="border-b border-gray-200 pb-5">
      <h1 class="text-3xl font-bold tracking-tight text-gray-900">Edit Profile</h1>
    </div>

    <div class="mt-8">
      <%= form_with(model: current_user, url: account_profile_path, method: :patch, class: "space-y-8") do |f| %>
        <%# Avatar Section %>
        <div class="bg-white shadow sm:rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Profile Photo</h3>
            <div class="mt-6 flex items-center">
              <div class="flex-shrink-0 h-24 w-24">
                <% if current_user.avatar.attached? %>
                  <%= image_tag current_user.avatar, class: "h-24 w-24 rounded-full" %>
                <% else %>
                  <div class="h-24 w-24 rounded-full bg-green-100 flex items-center justify-center">
                    <span class="text-3xl text-green-600"><%= current_user.first_name[0] %></span>
                  </div>
                <% end %>
              </div>
              <div class="ml-6">
                <div class="flex items-center space-x-4">
                  <div>
                    <%= f.file_field :avatar, 
                        class: "block w-full text-sm text-gray-500 file:mr-4 file:py-2 file:px-4 file:rounded-full file:border-0 file:text-sm file:font-semibold file:bg-green-50 file:text-green-700 hover:file:bg-green-100",
                        direct_upload: true %>
                  </div>
                  <% if current_user.avatar.attached? %>
                    <%= button_to remove_avatar_account_profile_path,
                        method: :delete,
                        class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" do %>
                      Remove
                    <% end %>
                  <% end %>
                </div>
                <p class="mt-2 text-xs text-gray-500">JPG, GIF or PNG. Max size of 2MB.</p>
              </div>
            </div>
          </div>
        </div>

        <%# Personal Information %>
        <div class="bg-white shadow sm:rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Personal Information</h3>
            <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-3">
                <%= f.label :first_name, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_field :first_name, 
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>

              <div class="sm:col-span-3">
                <%= f.label :last_name, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.text_field :last_name, 
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <%= f.label :email, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.email_field :email, 
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.telephone_field :phone, 
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%# Password Change %>
        <div class="bg-white shadow sm:rounded-lg">
          <div class="px-4 py-5 sm:p-6">
            <h3 class="text-lg font-medium leading-6 text-gray-900">Change Password</h3>
            <div class="mt-6 grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
              <div class="sm:col-span-4">
                <%= f.label :current_password, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :current_password,
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <%= f.label :password, "New Password", class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :password,
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>

              <div class="sm:col-span-4">
                <%= f.label :password_confirmation, class: "block text-sm font-medium text-gray-700" %>
                <div class="mt-1">
                  <%= f.password_field :password_confirmation,
                      class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
                </div>
              </div>
            </div>
          </div>
        </div>

        <%# Form Actions %>
        <div class="flex justify-end">
          <%= link_to "Cancel", account_dashboard_path, 
              class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
          <%= f.submit "Update Profile",
              class: "ml-3 rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" %>
        </div>
      <% end %>
    </div>
  </div>
</div> 