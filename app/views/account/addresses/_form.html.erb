<%# Address Form %>
<%= form_with(model: [:account, address], class: "space-y-8") do |f| %>
  <div class="bg-white shadow sm:rounded-lg">
    <div class="px-4 py-5 sm:p-6">
      <div class="grid grid-cols-1 gap-y-6 gap-x-4 sm:grid-cols-6">
        <%# Full Name %>
        <div class="sm:col-span-3">
          <%= f.label :full_name, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :full_name,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm",
                required: true %>
          </div>
        </div>

        <%# Phone %>
        <div class="sm:col-span-3">
          <%= f.label :phone, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.telephone_field :phone,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm",
                required: true %>
          </div>
        </div>

        <%# Street Address %>
        <div class="sm:col-span-6">
          <%= f.label :street_address, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :street_address,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm",
                required: true %>
          </div>
        </div>

        <%# Apartment/Suite %>
        <div class="sm:col-span-6">
          <%= f.label :street_address_2, "Apartment, suite, etc.",
              class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :street_address_2,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm" %>
          </div>
        </div>

        <%# City %>
        <div class="sm:col-span-2">
          <%= f.label :city, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :city,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm",
                required: true %>
          </div>
        </div>

        <%# State %>
        <div class="sm:col-span-2">
          <%= f.label :state, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.select :state, us_states,
                { prompt: "Select a state" },
                { class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm",
                  required: true } %>
          </div>
        </div>

        <%# ZIP Code %>
        <div class="sm:col-span-2">
          <%= f.label :zip_code, class: "block text-sm font-medium text-gray-700" %>
          <div class="mt-1">
            <%= f.text_field :zip_code,
                class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-green-500 focus:ring-green-500 sm:text-sm",
                required: true,
                pattern: "\\d{5}(-\\d{4})?",
                title: "Five digit zip code" %>
          </div>
        </div>

        <%# Default Address Checkbox %>
        <div class="sm:col-span-6">
          <div class="relative flex items-start">
            <div class="flex h-5 items-center">
              <%= f.check_box :default,
                  class: "h-4 w-4 rounded border-gray-300 text-green-600 focus:ring-green-500" %>
            </div>
            <div class="ml-3 text-sm">
              <%= f.label :default, "Make this my default address",
                  class: "font-medium text-gray-700" %>
              <p class="text-gray-500">Use this address for future orders</p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <%# Form Actions %>
  <div class="flex justify-end space-x-3">
    <%= link_to "Cancel", account_addresses_path,
        class: "rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50" %>
    <%= f.submit class: "rounded-md bg-green-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-green-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-green-600" %>
  </div>
<% end %> 