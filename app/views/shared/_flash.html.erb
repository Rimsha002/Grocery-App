<% if flash.any? %>
  <div class="fixed top-4 right-4 z-50 space-y-4" data-controller="flash">
    <% flash.each do |type, message| %>
      <% flash_class = type.to_s == 'notice' ? 'bg-green-50 text-green-800 border-green-400' : 'bg-red-50 text-red-800 border-red-400' %>
      <div class="px-4 py-3 rounded-lg border <%= flash_class %> flex items-center justify-between"
           data-flash-target="message"
           data-transition-enter="transition ease-out duration-300"
           data-transition-enter-from="transform opacity-0 translate-x-6"
           data-transition-enter-to="transform opacity-100 translate-x-0"
           data-transition-leave="transition ease-in duration-200"
           data-transition-leave-from="transform opacity-100 translate-x-0"
           data-transition-leave-to="transform opacity-0 translate-x-6">
        <div class="flex items-center">
          <% if type.to_s == 'notice' %>
            <svg class="h-5 w-5 text-green-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
            </svg>
          <% else %>
            <svg class="h-5 w-5 text-red-400" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
              <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zM8.707 7.293a1 1 0 00-1.414 1.414L8.586 10l-1.293 1.293a1 1 0 101.414 1.414L10 11.414l1.293 1.293a1 1 0 001.414-1.414L11.414 10l1.293-1.293a1 1 0 00-1.414-1.414L10 8.586 8.707 7.293z" clip-rule="evenodd" />
            </svg>
          <% end %>
          <p class="ml-3"><%= message %></p>
        </div>
        <button class="ml-4 focus:outline-none" data-action="flash#dismiss">
          <svg class="h-5 w-5 text-current opacity-50 hover:opacity-75" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 20 20" fill="currentColor">
            <path fill-rule="evenodd" d="M4.293 4.293a1 1 0 011.414 0L10 8.586l4.293-4.293a1 1 0 111.414 1.414L11.414 10l4.293 4.293a1 1 0 01-1.414 1.414L10 11.414l-4.293 4.293a1 1 0 01-1.414-1.414L8.586 10 4.293 5.707a1 1 0 010-1.414z" clip-rule="evenodd" />
          </svg>
        </button>
      </div>
    <% end %>
  </div>
<% end %> 