<!-- Hero Section -->
<div class="relative min-h-[600px] bg-white overflow-hidden">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0  ">
    <div class="w-full h-full bg-cover bg-center" style="background-image: url('/images/hero4.jpg')"></div>
    <div class="absolute inset-0 bg-black/40"></div>
  </div>

  <!-- Content -->
  <div class="relative z-10 max-w-6xl mx-auto h-full bg flex items-center">
    <div class="mt-10 flex items-center h-full pb-8 sm:pb-16 md:pb-20 lg:w-1/2 lg:pb-28 xl:pb-32 
    bg-primary-200 border-r-4 border-primary-500 border-solid rounded-r-[10vw] ">
      <main class="mt-10 mx-auto max-w-7xl px-4 sm:mt-12 sm:px-6 lg:mt-16 lg:px-8 xl:mt-20">
        <div class="sm:text-center lg:text-left">
          <h1 class="text-4xl tracking-tight font-extrabold text-white sm:text-5xl md:text-6xl">
            <span class="block text-green-900 xl:inline">Fresh Groceries</span>
            <span class="block text-primary-500 xl:inline ml-2">Delivered Daily</span>
          </h1>
          <p class="mt-3 text-base text-white sm:mt-5 sm:text-lg sm:max-w-xl sm:mx-auto md:mt-5 md:text-xl lg:mx-0">
            Get fresh, high-quality groceries delivered right to your doorstep. Shop from our wide selection of fruits, vegetables, dairy, and more.
          </p>
          <div class="mt-5 sm:mt-8 sm:flex sm:justify-center lg:justify-start">
            <%= link_to 'Shop Now', products_path, 
                class: "inline-flex items-center px-6 py-3 border border-transparent text-base font-medium
                   rounded-md shadow-sm text-white bg-gradient-to-r from-primary-500 to-primary-600 
                   hover:from-primary-600 hover:to-primary-700 transform transition-all duration-300 ease-in-out hover:scale-105 hover:shadow-lg
                    focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500" %>
          </div>
        </div>
      </main>
    </div>
  </div>
</div>

<!-- Featured Categories -->
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto py-16 sm:py-24 lg:py-32 lg:max-w-none">
      <h2 class="text-2xl font-extrabold text-gray-900">Featured Categories</h2>
      <div class="mt-6 space-y-12 lg:space-y-0 lg:grid lg:grid-cols-3 lg:gap-x-6">
        <% Category.active.limit(3).each do |category| %>
          <div class="group relative">
            <div class="relative w-full h-80 bg-green-100 rounded-lg overflow-hidden group-hover:opacity-75">
              <div class="w-full h-full flex items-center justify-center">
                <svg class="w-12 h-12 text-green-600" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5H7a2 2 0 00-2 2v12a2 2 0 002 2h10a2 2 0 002-2V7a2 2 0 00-2-2h-2M9 5a2 2 0 002 2h2a2 2 0 002-2M9 5a2 2 0 012-2h2a2 2 0 012 2" />
                </svg>
              </div>
            </div>
            <h3 class="mt-6 text-sm text-gray-500">
              <%= link_to category.name, category_path(category), class: "text-base font-semibold text-gray-900" %>
            </h3>
            <p class="text-base font-semibold text-gray-900"><%= pluralize(category.products.count, 'product') %></p>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>

<!-- Featured Products -->
<div class="bg-gray-50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto py-16 sm:py-24 lg:py-32 lg:max-w-none">
      <div class="flex justify-between items-center">
        <h2 class="text-2xl font-extrabold text-gray-900">Featured Products</h2>
        <%= link_to 'View all', products_path, class: "text-green-600 hover:text-green-500" %>
      </div>
      <div class="mt-6 grid grid-cols-1 gap-y-10 gap-x-6 sm:grid-cols-2 lg:grid-cols-4">
        <%= render partial: 'products/product', collection: Product.featured.limit(4) %>
      </div>
    </div>
  </div>
</div>

<!-- Why Choose Us -->
<div class="bg-white">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="max-w-2xl mx-auto py-16 sm:py-24 lg:py-32 lg:max-w-none">
      <h2 class="text-2xl font-extrabold text-gray-900 text-center">Why Choose Us</h2>
      <div class="mt-12 grid grid-cols-1 gap-8 sm:grid-cols-2 lg:grid-cols-3">
        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
            </svg>
          </div>
          <h3 class="mt-6 text-lg font-medium text-gray-900">Fresh Products</h3>
          <p class="mt-2 text-base text-gray-500">We source our products directly from local farmers and suppliers to ensure freshness.</p>
        </div>

        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z" />
            </svg>
          </div>
          <h3 class="mt-6 text-lg font-medium text-gray-900">Fast Delivery</h3>
          <p class="mt-2 text-base text-gray-500">Same-day delivery available for orders placed before 2 PM.</p>
        </div>

        <div class="text-center">
          <div class="flex items-center justify-center h-12 w-12 rounded-md bg-primary-500 text-white mx-auto">
            <svg class="h-6 w-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
            </svg>
          </div>
          <h3 class="mt-6 text-lg font-medium text-gray-900">Secure Payments</h3>
          <p class="mt-2 text-base text-gray-500">Multiple secure payment options available for your convenience.</p>
        </div>
      </div>
    </div>
  </div>
</div> 